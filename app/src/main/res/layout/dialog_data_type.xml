<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView android:id="@+id/titleDialogView"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="30sp"
                  android:gravity="center"
                  android:textColor="#ffff"
                  android:background="@color/colorPrimary"
                  android:padding="10dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <Spinner
                    android:id="@+id/txtViewDialogSpinnerCurrency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:gravity="center_horizontal"
                    android:textSize="25sp"/>

            <TextView
                    android:id="@+id/txtViewDialogTotalProductText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:textSize="15sp"
                    android:text="@string/totalSum"/>

            <TextView
                    android:id="@+id/txtViewDialogTotalProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:gravity="center_horizontal"
                    android:textSize="25sp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewSku"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</RelativeLayout>